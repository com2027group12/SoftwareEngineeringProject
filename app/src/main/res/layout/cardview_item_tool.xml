<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView

    android:clickable="true"
    android:focusable="true"
    android:id="@+id/cardview_id"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    cardview:cardCornerRadius="4dp">

    <!-- The whole structure of the card -->
    <GridLayout
        android:id="@+id/cardview_grid_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:horizontalSpacing="0dp"
        android:numColumns="2"
        android:stretchMode="columnWidth"
        android:verticalSpacing="0dp">

        <!-- The Tool Image -->
        <ImageView
            android:id="@+id/tool_img_id"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:background="#2d2d2d"
            android:scaleType="centerCrop"
            android:contentDescription="An image of the tool"/>

        <!-- The structure for the description part of the card -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- The Name of tool -->
            <TextView
                android:id="@+id/tool_name_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="4dp"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="4dp"
                android:paddingTop="5dp"
                android:text="Tool Name"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="24sp" />

            <!-- The rating of the tool  -->
            <TextView
                android:id="@+id/tool_rating_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="4dp"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="4dp"
                android:text="Rating"
                android:textColor="@android:color/black"
                android:textSize="13sp"
                android:gravity="bottom"/>


            <!-- The pay scheme -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- The tool pay by: hour, day, week -->
                <TextView
                    android:id="@+id/tool_payBy_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="2dp"
                    android:paddingStart="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="2dp"
                    android:text="Pay by: "
                    android:textColor="@android:color/black"
                    android:textSize="13sp" />

                <!-- The tool price -->
                <TextView
                    android:id="@+id/tool_price_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="4dp"
                    android:paddingStart="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="4dp"
                    android:text="Tool Price"
                    android:textSize="13sp" />


            </LinearLayout>

            <!-- The distance of the tool from the current user -->
            <TextView
                android:id="@+id/tool_distance_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="4dp"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="4dp"
                android:text="Distance"
                android:textColor="@android:color/black"
                android:textSize="13sp"
                android:gravity="bottom"/>

        </LinearLayout>
    </GridLayout>

</android.support.v7.widget.CardView>